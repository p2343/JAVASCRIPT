function InsertDash(Value)
{
    let a=String(Value);
    let result=[a[0]];
    for(let x=1;x<a.length;x++)
    {
        if((a[x]%2===0) && (a[x-1]%2===0))
        {
            result.push('-',a[x]);
        }  
        else
        {
            result.push(a[x]);
        }
    }
    console.log(result.join(''));
}
InsertDash(025468)
